{
  "name": "tdd-react",
  "version": "0.1.0",
  "description": "Yet another React app developed using TDD approach.",
  "author": "William R. J. Ribeiro - @bill_bsb",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "yarn validate && react-scripts start",
    "build": "yarn validate && react-scripts build",
    "test": "yarn validate && react-scripts test --verbose",
    "validate": "yarn lint && yarn flow",
    "lint": "eslint src/**/*.js",
    "flow": "flow",
    "flow:watch": "flow-watch",
    "flow-typed": "flow-typed",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "flow-bin": "^0.95.1",
    "flow-typed": "^2.5.1",
    "flow-watch": "^1.1.4",
    "jest-enzyme": "^7.0.2",
    "@storybook/react": "^5.0.11",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/addon-links": "^5.0.11",
    "@storybook/addons": "^5.0.11",
    "@babel/core": "^7.4.4",
    "babel-loader": "^8.0.5"
  }
}
